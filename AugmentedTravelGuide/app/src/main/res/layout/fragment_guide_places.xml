<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MarkerFragment">

    <ImageButton
        android:id="@+id/btnGuidePlacesFragmentClose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/close_btn"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/guidePlacesFragmentImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/logo_globe"/>


    <EditText
        android:id="@+id/guidePlacesFragmentLat"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:fontFamily="@font/momcake_bold"
        android:hint="Lat"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/guidePlacesFragmentImage"
        app:layout_constraintTop_toBottomOf="@+id/guidePlacesFragmentImage" />

    <EditText
        android:id="@+id/guidePlacesFragmentLng"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:fontFamily="@font/momcake_bold"
        android:hint="Lng"
        android:inputType="numberSigned|numberDecimal"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/guidePlacesFragmentImage"
        app:layout_constraintTop_toBottomOf="@+id/guidePlacesFragmentImage" />

    <EditText
        android:id="@+id/guidePlacesFragmentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/momcake_bold"
        android:hint="Name"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/light_gray"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidePlacesFragmentLat"
        app:layout_constraintWidth_percent="0.8" />

    <EditText
        android:id="@+id/guidePlacesFragmentDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.85"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guidePlacesFragmentName"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/momcake_thin"
        android:backgroundTint="@color/black"
        android:hint="Description"
        android:textColorHint="@color/light_gray"
        android:inputType="textMultiLine"
        android:maxLines="3"
        android:textAlignment="textStart" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuidePlacesFragmentSave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_green"
        android:fontFamily="@font/momcake_bold"
        android:text="Save"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>